{
  "compilerOptions": {
    "target": "es2021",
    "module": "nodenext",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": false,
    "useUnknownInCatchVariables": false,
    "noUnusedLocals": false,
    "importHelpers": true,
    "allowJs": false,
    "types": ["node"],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", ".lithia"]
}
